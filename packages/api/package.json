{
  "name": "@trilogyworks/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "AI Red Team Platform API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
